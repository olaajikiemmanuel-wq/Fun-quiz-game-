<body>
  <h1>üî• Fun Quiz Game üî•</h1>

  <div class="quiz-container">
    <div class="question" id="question">Question will appear here</div>
    <button class="answer-btn" id="answer1"></button>
    <button class="answer-btn" id="answer2"></button>
    <button class="answer-btn" id="answer3"></button>
    <button class="answer-btn" id="answer4"></button>
    <div id="score"></div>
  </div>

  <script>
    // Quiz questions
    const quiz = [
      {
        question: "Which planet is known as the Red Planet?",
        answers: ["Earth", "Mars", "Jupiter", "Venus"],
        correct: "Mars"
      },
      {
        question: "What is the largest mammal?",
        answers: ["Elephant", "Blue Whale", "Giraffe", "Hippopotamus"],
        correct: "Blue Whale"
      },
      {
        question: "Which programming language is used for web development?",
        answers: ["Python", "HTML", "C++", "Java"],
        correct: "HTML"
      },
      {
        question: "What is the capital of France?",
        answers: ["Berlin", "London", "Paris", "Rome"],
        correct: "Paris"
      },
      {
        question: "Which gas do plants absorb from the atmosphere?",
        answers: ["Oxygen", "Carbon Dioxide", "Nitrogen", "Hydrogen"],
        correct: "Carbon Dioxide"
      },
      {
        question: "What is 9 √ó 8?",
        answers: ["72", "81", "64", "69"],
        correct: "72"
      },
      {
        question: "Who wrote 'Romeo and Juliet'?",
        answers: ["Shakespeare", "Tolstoy", "Hemingway", "Dickens"],
        correct: "Shakespeare"
      },
      {
        question: "Which organ pumps blood throughout the body?",
        answers: ["Lungs", "Liver", "Heart", "Kidney"],
        correct: "Heart"
      }
    ];

    let currentQuestion = 0;
    let score = 0;

    // Display a question
    function showQuestion() {
      const q = quiz[currentQuestion];
      document.getElementById('question').textContent = q.question;
      document.getElementById('answer1').textContent = q.answers[0];
      document.getElementById('answer2').textContent = q.answers[1];
      document.getElementById('answer3').textContent = q.answers[2];
      document.getElementById('answer4').textContent = q.answers[3];
      document.getElementById('score').textContent = "Score: " + score;
    }

    function checkAnswer(answer) {
      if(answer === quiz[currentQuestion].correct){
        score++;
        alert("‚úÖ Correct!");
      } else {
        alert("‚ùå Wrong! The correct answer was: " + quiz[currentQuestion].correct);
      }
      currentQuestion++;
      if(currentQuestion < quiz.length){
        showQuestion();
      } else {
        alert("üéâ Quiz Finished! Your final score is: " + score + "/" + quiz.length);
        location.reload(); // restart quiz
      }
    }

    document.getElementById('answer1').addEventListener('click', () => checkAnswer(document.getElementById('answer1').textContent));
    document.getElementById('answer2').addEventListener('click', () => checkAnswer(document.getElementById('answer2').textContent));
    document.getElementById('answer3').addEventListener('click', () => checkAnswer(document.getElementById('answer3').textContent));
    document.getElementById('answer4').addEventListener('click', () => checkAnswer(document.getElementById('answer4').textContent));

    // Start quiz
    showQuestion();
  </script>
</body>
